<div class="page-header">
  <h1>Pictures</h1>
</div>

<a href="http://localhost:3000/new_picture_form" class="btn btn-primary btn-large">Add A New Picture</a>

<% @list_of_pictures.each do |picture| %>
  <div class="row">
    <div class="col-sm-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><%= picture.id %></h3>
        </div>
        <div class="panel-body">
          <div class="col-sm-2">
              <img src="<%= picture.source %>" class="img-responsive" width="200">
          </div>
          <div class="col-sm-10">
            <dl>
              <dd> <a href="http://localhost:3000/picture_details/<%= picture.id %>"><%= picture.caption %></a></dd>
            </dl>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
